@using OnlineShop.Models
@model IEnumerable<ApplicationUser>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<br /><br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Roles</h2>
    </div>
    <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-info">&nbsp; <i class="fas fa-plus"></i>  New Role</a>
    </div>
</div>
<br />

<table class="table table-striped border mt-2" id="myTable">
  <thead>
        <tr class="table-info">
        <th>Name</th>
        <th></th>
    </tr>
  </thead>
   
  <tbody>
      @foreach (var item in ViewBag.Roles)
        {
            <tr>
                <td>@item.Name</td>                
                <td style="width: 150px">
                    <div class="btn-group">
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">
                            <i class="far fa-edit"></i>
                        </a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }

  </tbody>
</table>
@section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function(){
            var save = '@TempData["save"]'
            if(save != null){
                alertify.success(save);
            }
        })
    </script>
}