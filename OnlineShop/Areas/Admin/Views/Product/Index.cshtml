@using OnlineShop.Models
@model IEnumerable<Products>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<br /><br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Product List</h2>
    </div>
    <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-info">&nbsp; <i class="fas fa-plus"></i>  New Product</a>
    </div>
</div>
<br />

<form method="post">
    <div class="row">
        <div class="col-3">
            <input type="number" class="form-control" name="lowPrice"/>
        </div>
        <div class="col-3">
            <input type="number" class="form-control" name="HighPrice"/>
        </div>
        <div class="col-3">
            <input type="submit" value="Search" class="btn btn-success"/>
        </div>
        <div class="col-3"></div>
    </div>
</form>


<table class="table table-striped border mt-2" id="myTable">
  <thead>
        <tr class="table-info">
        <th>@Html.DisplayNameFor(c=>c.Name)</th>
        <th>@Html.DisplayNameFor(c=>c.Price)</th>
        <th>@Html.DisplayNameFor(c=>c.ProductColor)</th>
        <th>@Html.DisplayNameFor(c=>c.IsAvailable)</th>
        <th>@Html.DisplayNameFor(c=>c.ProductTypeId)</th>
        <th>@Html.DisplayNameFor(c=>c.SpecialTagId)</th>

        <th></th>
        <th></th>
    </tr>
  </thead>
   
  <tbody>
       @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.ProductColor</td>
            <td>@item.IsAvailable</td>
            <td>@item.ProductType.ProductType</td>
            <td>@item.SpecialTag.Name</td>
            <td>
                <partial name="_ProductButton" model="@item.Id" />
            </td>
        </tr>
    }
  </tbody>
</table>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function() {
        $('#myTable').DataTable( {
        dom: 'Bfrtip',
        buttons: [
            'copyHtml5',
            'excelHtml5',
            'csvHtml5',
            'pdfHtml5'
        ]
    } );
} );
     </script>
}