@{
}
<br /> <br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Product Type List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-action="Create" class="btn btn-info"> &nbsp; <i class="fas fa-plus"></i> New Product Type</a>
    </div>
</div>
<br />

<table class="table table-striped border">
    <tr class="table-info">
        <th>@Html.DisplayNameFor(c=>c.Name)</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>
                <partial name="_TagPageButton" model="@item.Id" />
            </td>
        </tr>
    }
</table>
